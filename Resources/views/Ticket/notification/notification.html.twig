<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns="http://www.w3.org/1999/xhtml" style="color: #222; background: #FFF; margin: 0; padding: 0;">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
  </head>
  <body style="color: #222; background: #FFF; margin: 0; padding: 0;" bgcolor="#FFF">
    <table cellspacing="0" cellpadding="0" class="body" style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; width: 100%; background: #fff; margin: 0; padding: 2em;" bgcolor="#fff">
      <tr>
        <td class="center" align="center" valign="top" style="width: 100%; text-align: left; vertical-align: top; margin: 0; padding: 0;">
          <center>
            <div style="color: #ccc; font-size: 12px; line-height: 16px; margin: 0 0 20px 0; text-align: left;">{{ delimiter }}</div>
            <table cellspacing="0" cellpadding="0" style="width: 100%; margin: 0; padding: 0;">
              <tr>
                <td class="logo" style="width: 100%; text-align: left; vertical-align: top; margin: 0; padding: 0 0 50px;" align="left" valign="top">
                  <img src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/diamantefront/img/logo.png') }}" alt="Diamante Desk" height="52" width="280" />
                </td>
              </tr>
              <tr>
                <td style="width: 100%; text-align: left; vertical-align: top; margin: 0; padding: 0;" align="left" valign="top">
                  <h1 style="font-size: 18px; font-weight: 400; margin: 0 0 25px;">
                    {{ header }} by {{ user }}
                  </h1>

                    {% if changes %}
                        <table cellspacing="0" cellpadding="0" style="margin: 0; padding: 0;">
                            {% for key, value in changes %}
                                <tr>
                                    <td style="color: #A09F9F; font-size: 14px; font-weight: 200; line-height: 18px; margin: 0; padding: 5px 15px 0 0; white-space: nowrap; vertical-align: top;" valign="top">{{ key }}</td>
                                    <td style="font-size: 14px; font-weight: 200; line-height: 18px; margin: 0; padding: 5px 15px 0 0; vertical-align: top;" valign="top">{{ value|striptags }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% endif %}

                    <div style="margin-top: 15px; font-size: 14px; font-weight: 200; line-height: 18px;">
                        View this ticket <a href="{{ render_ticket_url(ticketKey, isOroUser) }}">{{ ticketKey }}</a> in
                        DiamanteDesk
                    </div>

                    {% if attachments %}
                        <h4 style="font-size: 16px; font-weight: 400; margin: 15px 0;">Attachments:</h4>
                        {% for key, value in attachments %}
                            <p style="font-size: 14px; font-weight: 200; line-height: 20px; margin: 0; padding: 0;">{{ value }}</p>
                        {% endfor %}
                    {% endif %}
                </td>
              </tr>
              <tr>
                <td style="width: 100%; text-align: left; vertical-align: top; margin: 0; padding: 0;" align="left" valign="top">
                  <p class="small thank-you" style="font-size: 14px; font-weight: 200; line-height: 20px; padding: 35px 0 0;">
                    Thank you,
                    <br />
                    DiamanteDesk Team
                  </p>
                </td>
              </tr>
            </table>
          </center>
        </td>
      </tr>
    </table>
  </body>
</html>
